
div[class*='language-'] {
  border-radius: 0;
}

.navbar {
  border-bottom: none;
}

.theme-default-content:not(.custom) {
  max-width: 960px;
}

.custom-block.details {
  display: block;
  position: relative;
  border-radius: 2px;
  margin: 1.6em 0;
  padding: 1.6em;
  background-color: #eee;
}

.bordered-box {
  position: relative;
  padding: 4px;
}

.bordered-box::before, .bordered-box::after {
  position: absolute;
  width: 100%;
  height: 100%;
  content: '';
  border: 4px solid transparent;
  box-sizing: bordered-box;
}

.bordered-box::before {
  top: 0;
  left: 0;
  border-top-color: black;
  border-right-color: black;
}

.bordered-box::after {
  bottom: 0;
  right: 0;
  border-bottom-color: black;
  border-left-color: black;
}
